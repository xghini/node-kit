{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "outDir": "./dist",
    "rootDir": "./src",
    "esModuleInterop": true,
    "allowJs": true,
    "checkJs": false,
    "declaration": true,
    "moduleResolution": "node",
    "isolatedModules": true,
    "removeComments": true, 
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dev", "dist"],
}

